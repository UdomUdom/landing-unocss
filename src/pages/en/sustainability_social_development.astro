---
import Layout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";

const environmentDescription = `SDK & DYMS is committed to organizational development alongside
environmental conservation through the “SDK & DYMS Green Mission”
approach, which encompasses the use of clean energy, recycling,
increasing green spaces, and cultivating environmental awareness
within the organization and communities. The goal is to reduce
environmental impact and promote sustainability across all
dimensions of business.`;
const socialDescription = `SDK & DYMS promotes social development through the “United for a
Cleaner Society” initiative, organizing community clean-up
activities, providing waste separation education, and encouraging
volunteerism within the organization. These efforts aim to improve
quality of life and reduce long-term environmental impact.`;
---

<Layout title="Home">
  <div class="items-center justify-center">
    <section id="home" class="flex flex-col">
      <div class="flex flex-col items-center justify-center text-start">
        <div class="w-full">
          <img src="/Bg2.png" alt="homeHeroAlt" class="w-full h-auto" />
        </div>
      </div>
    </section>
  </div>

  <section
    id="home_env"
    class="w-full h-auto lg:h-[800px] bg-white pt-20 pb-30 hover:bg-gray-100"
  >
    <div class="grid grid-cols-1 lg:grid-cols-[1.5fr_2fr] relative h-full">
      <div class="relative flex items-center justify-end px-6 lg:px-12">
        <Card
          title="Environmental Development"
          description={environmentDescription}
          showButton={true}
        />
      </div>
      <div class="h-full w-full">
        <img
          src="/web_asset/env_dev.jpg"
          alt="Environmental Development"
          class="w-full h-full object-cover"
          style="border-end-start-radius: 0.5rem; border-start-start-radius: 0.5rem;"
        />
      </div>
    </div>
  </section>

  <section
    id="home_social"
    class="w-full h-auto lg:h-[800px] bg-white pt-20 pb-30 hover:bg-gray-100"
  >
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_1fr] relative h-full">
      <div class="h-full w-full">
        <img
          src="/web_asset/social_dev.jpg"
          alt="Social Development"
          class="w-full h-full object-cover"
          style="border-end-end-radius: 0.5rem; border-start-end-radius: 0.5rem;"
        />
      </div>
      <div class="relative flex items-center justify-start px-6 lg:px-12">
        <Card
          title="Social Development"
          description={socialDescription}
          showButton={true}
        />
      </div>
    </div>
  </section>

</Layout>
