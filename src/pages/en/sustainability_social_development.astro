---
import Layout from "../../layouts/BaseLayout.astro";
import Card from "../../components/Card.astro";

const environmentDescription = `SDK & DYMS places importance on social development alongside business operations, focusing on organizational participation with the community to create a livable and sustainable society. One of the main ongoing activities is the waste collection and reduction campaign in the community under the concept of “United Power for a Clean Society.”`;
const socialDescription = `SDK & DYMS believes that “waste won't be a problem if we work together to manage it systematically.” Therefore, we are committed to being an organization that not only creates value for businesses but also truly improves the quality of life in the surrounding community.`;
---

<Layout title="Social development" lang="th">
  <div class="items-center justify-center">
    <section id="home" class="flex flex-col">
      <div class="flex flex-col items-center justify-center text-start">
        <div class="w-full">
          <img
            src="/web_asset/sc_dev.png"
            alt="homeHeroAlt"
            class="w-full h-auto"
          />
        </div>
      </div>
    </section>
  </div>

  <section
    id="home_env"
    class="w-full h-auto lg:h-[800px] bg-white pt-20 pb-30 hover:bg-gray-100"
  >
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_1fr] relative h-full">
      <div class="relative flex items-center justify-end px-6 lg:px-12">
        <Card
          title="การพัฒนาด้านสังคม"
          description={environmentDescription}
          showButton={false}
        />
      </div>
      <div class="h-full w-full">
        <img
          src="/web_asset/social_dev.jpg"
          alt="Environmental Development"
          class="w-full h-full object-cover"
          style="border-end-start-radius: 0.5rem; border-start-start-radius: 0.5rem;"
        />
      </div>
    </div>
  </section>

  <section
    id="home_social"
    class="w-full h-auto lg:h-[800px] bg-white pt-20 pb-30 hover:bg-gray-100"
  >
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_1fr] relative h-full">
      <div class="h-full w-full">
        <img
          src="/web_asset/social_dev_more.jpg"
          alt="Social Development"
          class="w-full h-full object-cover"
          style="border-end-end-radius: 0.5rem; border-start-end-radius: 0.5rem;"
        />
      </div>
      <div
        class="absolute top-1/2 right-[710px] transform -translate-y-1/2 z-10 w-[400px]"
      >
        <Card title="" description={socialDescription} showButton={false} />
      </div>
    </div>
  </section>
</Layout>