---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Button from "./Button.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description, showButton = true } = Astro.props;
---

<div
  class="bg-white shadow-xl max-w-2xl w-full p-6 lg:p-8 z-10 lg:translate-x-1/4 transition-transform duration-300"
>
  <h3 class="text-xl font-bold text-blue-600 mb-4">{title}</h3>
  <p class="text-gray-700 mb-6 leading-relaxed">{description}</p>

  {showButton && <Button route={Astro.props.route} />}
</div>
