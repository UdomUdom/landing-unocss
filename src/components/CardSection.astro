---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Button from "./Button.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description, showButton = true } = Astro.props;

const formattedDescription = description.replace(/\n/g, "<br />");
---

<div
  class="bg-white shadow-xl w-full p-6 lg:p-8 z-10 lg:translate-x-1/4 transition-transform duration-300"
>
  <h3 class="text-xl font-bold text-blue-600 mb-4">{title}</h3>
  <p class="text-gray-700 mb-6 leading-relaxed" set:html={formattedDescription} />

  {showButton && <Button />}
</div>
