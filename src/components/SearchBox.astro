---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="pt-2 relative mx-auto text-gray-600 w-full max-w-md md:max-w-xl">
  <input
    class="w-full border-0 shadow-md h-10 px-5 pr-12 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-gray-200 transition-all duration-300"
    type="search"
    name="search"
    placeholder={t("search.placeholder")}
    aria-label="Search"
  />
  <button
    type="submit"
    class="absolute right-0 top-0 mt-2.5 mr-3 border-0 bg-transparent text-gray-500 hover:text-black focus:outline-none transition-transform duration-200"
    aria-label="Submit search"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 1024 1024"
      class="transition-transform duration-200"
    >
      <path
        fill="currentColor"
        d="M1014.64 969.04L703.71 656.207c57.952-69.408 92.88-158.704 92.88-256.208c0-220.912-179.088-400-400-400s-400 179.088-400 400s179.088 400 400 400c100.368 0 192.048-37.056 262.288-98.144l310.496 312.448c12.496 12.497 32.769 12.497 45.265 0c12.48-12.496 12.48-32.752 0-45.263zM396.59 736.527c-185.856 0-336.528-150.672-336.528-336.528S210.734 63.471 396.59 63.471s336.528 150.672 336.528 336.528S582.446 736.527 396.59 736.527"
      ></path>
    </svg>
  </button>
</div>
